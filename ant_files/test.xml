<?xml version="1.0" encoding="UTF-8"?>
<project name="test" default="test">
    <property file="build.properties"/>


    <target name="test">
        <junit showoutput="yes">
            <classpath>
                <pathelement location="${junit}/hamcrest-all-1.3.jar"/>
                <pathelement location="${junit}/junit-4.13.2.jar"/>
                <pathelement location="${junit}/system-rules-1.19.0.jar"/>
                <pathelement location="${out}/classes"/>
            </classpath>

            <formatter type="plain"/>

            <test name="Tests.TestClear" outfile="../TestClear.txt"/>
            <test name="Tests.TestUpdate" outfile="../TestUpdate.txt"/>
            <test name="Tests.TestInsert" outfile="../TestInsert.txt"/>

        </junit>
    </target>

</project>